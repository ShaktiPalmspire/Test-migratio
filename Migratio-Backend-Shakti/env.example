# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
FRONTEND_UI_URL=http://localhost:3001
SESSION_SECRET=your-super-secret-session-key-here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=migratio
DB_PASSWORD=your-database-password
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# External API Configuration
HUBSPOT_API_KEY=your-hubspot-api-key
PIPEDRIVE_API_KEY=your-pipedrive-api-key
API_TIMEOUT=30000
MAX_RETRIES=3

# HubSpot OAuth Configuration (REQUIRED for token refresh)
CLIENT_ID=your-hubspot-client-id
CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=http://localhost:3000/hubspot/oauth-callback

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Logging
LOG_LEVEL=info
